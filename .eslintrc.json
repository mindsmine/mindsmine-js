{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "no-mixed-spaces-and-tabs": [
      "error",
      "smart-tabs"
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "MemberExpression": 1
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "no-extra-semi": "error"
  }
}